        <Button x:Name="btXoa" Content="Xóa" HorizontalAlignment="Left" Margin="227,119,-2,0" VerticalAlignment="Top" Width="75" FontSize="16" Height="27"/>
        <Button x:Name="btThoat" Content="Thoát" Margin="227,317,-2,-41" FontSize="16" HorizontalAlignment="Left" Width="75" Height="24" VerticalAlignment="Top"/>
        <TextBlock x:Name="tbl" HorizontalAlignment="Left" Margin="85,56,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="26" Width="217" FontSize="14.667"/>

    </Grid>
</UserControl>
