        <Label x:Name="label3_Copy" Content="Tác giả" HorizontalAlignment="Left" Margin="417,88,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.093,0.656" Width="48"/>
        <Label x:Name="label2_Copy" Content="Nhà xuất bản" HorizontalAlignment="Left" Margin="10,115,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.136,0.523"/>
        <Label x:Name="label3_Copy1" Content="Năm xuất bản" HorizontalAlignment="Left" Margin="252,115,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.093,0.656"/>
        <Label x:Name="label3_Copy2" Content="Số lượng" HorizontalAlignment="Left" Margin="417,115,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.093,0.656" Width="60"/>
