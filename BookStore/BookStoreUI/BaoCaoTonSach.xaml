<UserControl x:Class="BookStoreUI.BaoCaoTonSach"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookStoreUI"
             mc:Ignorable="d" Height="278.75" Width="493.096">
    <Grid>
        <Label x:Name="label" Content="BÁO CÁO TỒN SÁCH" FontSize="24" HorizontalAlignment="Left" Margin="129,10,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Margin="10,52,0,0" VerticalAlignment="Top" Height="215" Width="467">
            <DataGrid.Columns>
                <DataGridTextColumn Width="30" Header="Stt" Binding="{Binding Stt}" />
                <DataGridTextColumn Width="170" Header="Tên sách" Binding="{Binding TenSach}" />
                <DataGridTextColumn Width="90" Header="Tồn đầu" Binding="{Binding TonDau}" />
                <DataGridTextColumn Width="90" Header="Phát sinh" Binding="{Binding PhatSinh}" />
                <DataGridTextColumn Width="90" Header="Tồn cuối" Binding="{Binding TonCuoi}" />
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</UserControl>
