        <TextBlock x:Name="tclMaNhapSach" HorizontalAlignment="Left" Margin="135,57,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="26" Width="112" TextAlignment="Center" FontSize="16"/>
